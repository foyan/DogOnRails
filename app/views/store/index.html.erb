<% if notice %>
	<p id="notice" ><%= notice %></p>
<% end %>

<% @products.each do |product| %>
	<div class="entry">
		<img src="<%= product.image_url %>" />
		<h3><%= product.title %></h3>
		<p>
			<%= product.description %>
		</p>
		<div class="price_line" >
			<span class="price" ><%= number_to_currency(product.price) %></span>
			<%= button_to 'Me buy this.', line_items_path(:product_id => product) %>
		</div>
	</div>
<% end %>
